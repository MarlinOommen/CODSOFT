print("Bot: Hi! I recommend movies and songs. Type 'movies' or 'songs' for the recommendation Type 'exit' to quit.")
while True:
    msg = input("You: ").lower()
    if "exit" in msg:
        print("Bot:Goodbye")
        break
    elif "movies" in msg:
        print("Bot:What type of movies do you prefer?(comedy/action/horror)")
    elif "songs" in msg :
        print("Bot:What kind of music do you prefer?(party/rap/pop)")
    elif "comedy" in msg:
        print("Bot:You might enjoy *Jumanji* or *Deadpool* for a good laugh")
    elif "action" in msg:
        print("Bot:Try watching *John Wick* or *Avengers*")
    elif "horror" in msg:
        print("Bot:Watch *The Conjuring* or *Annabelle* if you dare")
    elif "party" in msg:
        print("Bot:*Cheap Thrills* and *Uptown Funk* will get you on the dance floor")
    elif "rap" in msg:
        print("Bot:*Lose Yourself* and *Godâ€™s Plan* are great")
    elif "pop" in msg:
        print("Bot:Listen to *Levitating* or *Blinding Lights*")
    else:
        print("Bot:Say 'movies' or 'song' to get recommendations")
