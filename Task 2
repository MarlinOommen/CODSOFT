import pandas as pd
from sklearn.feature_extraction.text import CountVectorizer
from sklearn.metrics.pairwise import cosine_similarity

songs = pd.DataFrame({
    "name": ["Espresso","Believer","Levitating","Shape of You","Stay","Havana"],
    "tags": ["pop dance","rock energy","pop dance","pop dance","pop chill","latin pop"]
})

X = CountVectorizer().fit_transform(songs["tags"])
sim = cosine_similarity(X)

def recommend(song):
    i = songs[songs.name==song].index[0]
    rec = sim[i].argsort()[-3:-1]
    for r in rec[::-1]:
        print(songs.name[r])

recommend("Levitating")
